<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title>美好家园</title>
		<link rel="stylesheet" type="text/css" href="css/reset.css"/>
		<link rel="stylesheet" type="text/css" href="css/gongyou.css"/>
		<link rel="stylesheet" type="text/css" href="css/zhuanjialist.css"/>
		<style type="text/css">
			.linps {
			    text-align: center;
			    padding: 0.2rem 0;
			    font-size: 0.28rem;
			}
			.banner {
			    margin: 0 auto;
			    height: 0px;
			    padding-bottom: 56%;
			    overflow: hidden;
			}
			.banner img {
			    width: 100%;
			}
			
			img {
			    border: 0;
			}
			.title{
				height: 40px;
			    text-align: left;
			    line-height: 40px;
			    font-weight: bold;
			    color: #00aff0;
			    font-size: 14px;
			    padding-left: 10px;
			    padding-right: 10px;
			}
			.zhiwu, .shangchang,.name{
			white-space: nowrap;
		    overflow: hidden;
		    text-overflow: ellipsis;
			}
			
		</style>
		<script src="js/jquery-1.11.3.min.js" type="text/javascript" charset="utf-8"></script>
	</head>
	<body>
		<div class="banner"></div>
		<!--专家列表-->
		<div class="zhuanjialist">
			 <div class="title">专家列表</div>
			<ul class="zjus">
				
			</ul>
			<p class="linps">点击加载更多</p>
			
		</div>
	</body>
	<script src="js/zoom.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript">
		jQuery(function ($){
			var sds=null;
			var sj=1;
			$.ajaxSetup({ 
			    async : false 
			});
			function ax1(urls,obj){
				$.post(urls,obj,function(data) {
				sds=data;
				}, "json");
			}
			function GetRequest() {
				var url = location.search; //获取url中"?"符后的字串
				if(url.indexOf("?") != -1) { //判断是否有参数
					var str = url.substr(1); //从第一个字符开始 因为第0个是?号 获取所有除问号的所有符串
					strs = str.split("="); //用等号进行分隔 （因为知道只有一个参数 所以直接用等号进分隔 如果有多个参数 要用&号分隔 再用等号进行分隔）
					return strs[1] //直接弹出第一个参数 （如果有多个参数 还要进行循环的）
				}
			}
			var sid = GetRequest();
			
//			进入页面加载的baner等
			var hm='';
			ax1("http://ms.meihaojy.com/rest.php?s=web/index",{'method':'fosung.app.v2.web.special.expert','id':sid,'page':sj});
			console.log(sds);
			//判断banner图有没有
			if(sds.data.pic_url==''){
				$('.banner').eq(0).hide();
			}else {
				$('.banner').eq(0).css({'background':'url('+sds.data.pic_url+') 0 0  no-repeat','background-size':'cover'})
			}
			$.each(sds.data.datalist, function (its, obj) {
				if(sds.data.datalist[its].lecturer_type==2){
					hm+='<li class="lis"><a  href=Znongtuan.html?lecturer_id='+sds.data.datalist[its].id+'><div class="touxia">';
				}else {
					hm+='<li class="lis"><a  href=zhuanjiageren.html?lecturer_id='+sds.data.datalist[its].id+'><div class="touxia">';
				}
				if(sds.data.datalist[its].head_icon==''||sds.data.datalist[its].head_icon==null){
					hm+='<img src="files/banner.jpg"/></div><div class="jianjie">';
				}else {
					hm+='<img src='+sds.data.datalist[its].head_icon+' /></div><div class="jianjie">';
				}
				hm+='<h1 class="name">'+sds.data.datalist[its].username+'</h1>';
				hm+='<p class="zhiwu">'+sds.data.datalist[its].zhicheng+'</p>';
				hm+='<p class="shangchang">'+sds.data.datalist[its].shanchang+'</p></div></a></li>';
			})
			$('.zjus').get(0).innerHTML=hm;
			$(".linps").on('touchend',function(e){
				e.preventDefault()
				sj++;
				ax1("http://ms.meihaojy.com/rest.php?s=web/index",{'method':'fosung.app.v2.web.special.expert','id':sid,'page':sj});
				console.log(sds);
				if(sds.data.datalist.length!=0){
					$.each(sds.data.datalist, function (its, obj) {
						if(sds.data.datalist[its].lecturer_type==2){
							hm+='<li class="lis"><a  href=Znongtuan.html?lecturer_id='+sds.data.datalist[its].id+'><div class="touxia">';
						}else {
							hm+='<li class="lis"><a  href=zhuanjiageren.html?lecturer_id='+sds.data.datalist[its].id+'><div class="touxia">';
						}
						if(sds.data.datalist[its].head_icon==''||sds.data.datalist[its].head_icon==null){
							hm+='<img src="files/banner.jpg"/></div><div class="jianjie">';
						}else {
							hm+='<img src='+sds.data.datalist[its].head_icon+' /></div><div class="jianjie">';
						}
						hm+='<h1 class="name">'+sds.data.datalist[its].username+'</h1>';
						hm+='<p class="zhiwu">'+sds.data.datalist[its].zhicheng+'</p>';
						hm+='<p class="shangchang">'+sds.data.datalist[its].shanchang+'</p></div></a></li>';
					})
					$('.zjus').get(0).innerHTML=hm;
				}else{
					$(this).html('已经全部加载完毕');
				}
			})
		})
	</script>
</html>
