	<script type="text/javascript">
		jQuery(function ($){
		function GetRequest() {
		   var url = location.search; //获取url中"?"符后的字串
		   if (url.indexOf("?") != -1) {    //判断是否有参数
		      var str = url.substr(1); //从第一个字符开始 因为第0个是?号 获取所有除问号的所有符串
		      strs = str.split("=");   //用等号进行分隔 （因为知道只有一个参数 所以直接用等号进分隔 如果有多个参数 要用&号分隔 再用等号进行分隔）
		    return strs[1]         //直接弹出第一个参数 （如果有多个参数 还要进行循环的）
		   }
		}
		var sds=null;
		var sj=1;
		var sid=GetRequest();
		console.log(sid);
		var hm='';
		var hm1='';
		//console.log(sid);
		$.ajaxSetup({ 
		    async : false 
		});
		function ax1(urls,obj){
			$.post(urls,obj,function(data) {
			sds=data;
			}, "json");
		}
		ax1("http://jiayuan.meihaojy.com/rest.php?s=web/index",{'method':'fosung.app.specialist.questiondetail','question_id':sid,'page':sj});
		//console.log(sds);
			if(sds.data.question.user_thumb==''||sds.data.question.user_thumb==null){
					$('.xxxt1 img').eq(0).attr('src','img/user@2x.png');
			}else {
			    	$('.xxxt1 img').eq(0).attr('src',sds.data.question.user_thumb);
			}
		
		$('.xt1').eq(0).html(sds.data.question.user_name);
		$('#lyhh').html(sds.data.question.question_content);
		$.each(sds.data.question.question_thumb, function(it,obj) {
			if(sds.data.question.question_thumb.length===0){
				hm+=' ';
			}else {
				hm+='<img class=dotai_'+sds.data.question.question_thumb.length+' src='+sds.data.question.question_thumb[it].thumb_url+' />';
			}
		});	
		$('.xx02').eq(0).html(hm);
		$('.xttm2 time').eq(0).html(sds.data.question.question_addtime);
		//console.log(sds.data.reply.length)
		if(sds.data.reply.length==0){
			return false;
		}else {
			$.each(sds.data.reply, function(it,obj) {
				hm1+='<li><p class="xxxt">'
				if(sds.data.reply[it].reply_user_thumb==''||sds.data.reply[it].reply_user_thumb==null){
					hm1+='<img src="img/user@2x.png"/>';
				}else {
					hm1+='<img src='+sds.data.reply[it].reply_user_thumb+' />';
				}
				
				hm1+='<span class="xt">'+sds.data.reply[it].reply_user_name+'</span></p>';
				hm1+='<h2 class="hh">'+sds.data.reply[it].reply_content+'</h2><div class="xx02">';
				$.each(sds.data.reply[it].reply_thumb, function(its,obj) {
					if(sds.data.reply[it].reply_thumb.length===0){
						hm1+='';
					}else {
						hm1+='<img class=dotai_'+sds.data.reply[it].reply_thumb.length+' src='+sds.data.reply[it].reply_thumb[its].thumb_url+' />';
					}
				});	
				hm1+='</div><div class="xttm"><time>'+sds.data.reply[it].reply_addtime+'</time></div></li>';
			})
			$('.lyks2').html(hm1);
		}
		if(sds.data.question_close.question_close_content.length==0){
			return false
		}else {
			$('#whps').html(sds.data.question_close.question_close_content).addClass('clgb');
		}
		var gao=$(window).height();
			$('.xx02 img').on('touchstart',function(e){
				e.preventDefault();
				e.stopPropagation()
				var srcs=$(this).attr('src')
				$('#l-ds').css({'height':gao,'line-height':gao+'px','background':'rgba(0,0,0,1)','display':'block'});
				
				$('#l-ds img').attr('src',srcs);
				$(document.body).css("overflow","hidden");
			})
			$('#l-ds').click(function (){
				$('#l-ds').css({'display':'none'});
				$(document.body).css("overflow","scroll");
			})
	})
	</script>
